@model IEnumerable<Cinema>

@{
    ViewBag.Title = "Cinemas";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-8 offsetg-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cinema in Model) 
                {
                    <tr>
                        <td class="allign-middle">
                            <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="max-width: 150px" />
                        </td>
                        <td class="allign-middle">
                            @Html.DisplayFor(modelItem => cinema.Name)
                        </td>
                        <td class="allign-middle">
                            @Html.DisplayFor(modelItem => cinema.Description)
                        </td>
                        <td class="allign-middle">
                            <a class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a> | 
                            <a class="btn btn-info"><i class="bi bi-eye"></i>Details</a> | 
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
