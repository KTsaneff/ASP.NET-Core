<main id="side__main" class="2xl:-[--w-side] xl:ml-[--w-side-sm] p-2.5 h-[calc(100vh-var(--m-top))] mt-[--m-top]">
    <div class="lg:flex 2xl:gap-16 gap-12 max-w-[1065px] mx-auto"
         id="js-oversized">
        <div class="max-w-[680px] mx-auto">
            @* Stories*@
            <div class="mb-8">
                <h3 class="font-extrabold text-2xl text-black hidden">Stories</h3>
                <div class="relative" tabindex="-1" uk-slider="auto play: true;finite: true" uk-lightbox="">
                    <div class="py-5 uk-slide-container">
